<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ProfileBook.Views.MainListPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem       
                 Command="{Binding LogOutClick}"
                 IconImageSource="ic_exit_to_app.png"
                 Order="Primary"
                 Text="LogOut"/>
        <ToolbarItem 
                 Command="{Binding SettingsClick}"
                 IconImageSource="ic_settings.png"
                 Order="Primary"/>
    </ContentPage.ToolbarItems>
    <AbsoluteLayout>
        <ImageButton
            AbsoluteLayout.LayoutBounds="0.95,0.95,80,80"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="Blue"
            Command="{Binding AddEditButtonClicked}"
            CornerRadius="40"
            Padding="19"
            Source="ic_add.png"/>
    </AbsoluteLayout>
  
</ContentPage>