<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ProfileBook.Views.SingUpPage"
              Title="{Binding Title}">
    <StackLayout>
        <!--<Label Text="   User SingUp" BackgroundColor="#2196F3" HeightRequest="40" VerticalTextAlignment="Center"  FontSize="20" TextColor="white" FontAttributes="Bold"/>-->
        <Entry x:Name="loginEntry" Placeholder = "Login"  Margin="50, 240, 50, 0" Text="{Binding LoginField}"/>
        <Entry x:Name="passwordEntry"  Placeholder = "Password" IsPassword ="True" Margin="50, 0, 50, 0" />
        <Entry x:Name="confirmPasswordEntry"  Placeholder = "Confirm Password" IsPassword ="True" Margin="50, 0, 50, 0" />
        <Button Text = "SIGN UP" Margin="50, 110, 50, 0" HeightRequest="60" BackgroundColor="#D2691E" FontSize="20" BorderWidth="1" BorderColor="Black" Command="{Binding SingUpButtonClick}"  />
    </StackLayout>
  
</ContentPage>